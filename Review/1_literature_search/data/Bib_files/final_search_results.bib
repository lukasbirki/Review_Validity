@article{ WOS:000678562100022,
Author = {Jacobs, Alan M. and Matthews, J. Scott and Hicks, Timothy and Merkley,
   Eric},
Title = {Whose News? Class-Biased Economic Reporting in the United States},
Journal = {AMERICAN POLITICAL SCIENCE REVIEW},
Year = {2021},
Volume = {115},
Number = {3},
Pages = {1016-1033},
Month = {AUG},
Abstract = {There is substantial evidence that voters' choices are shaped by
   assessments of the state of the economy and that these assessments, in
   turn, are influenced by the news. But how does the economic news track
   the welfare of different income groups in an era of rising inequality?
   Whose economy does the news cover? Drawing on a large new dataset of US
