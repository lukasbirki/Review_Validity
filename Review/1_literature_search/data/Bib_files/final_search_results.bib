@article{ WOS:000490409800001,
Author = {Solis, Jonathan A. and Sagarzazu, Inaki},
Title = {The Media Smells like Sulfur!!! Leaders and Verbal Attacks against the
   Fourth Estate in Unconsolidated Democracies},
Journal = {POLITICAL COMMUNICATION},
Year = {2020},
Volume = {37},
Number = {1},
Pages = {20-45},
Month = {JAN 2},
Abstract = {Government perpetrated attacks against independent media, ranging from
   journalists? imprisonment to verbal attacks against outlets, carry an
   adverse effect for freedoms in democracies. Verbal attacks specifically
   provide leaders with a low-cost, easy to execute tool to delegitimize
   critical media. In this paper we present a theoretical contribution on
   when leaders in unconsolidated democracies verbally attack the media.
   Furthermore, we propose a way to quantitatively measure such attacks.
